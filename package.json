{
  "name": "next-dx",
  "displayName": "Next DX",
  "description": "Improved developer experience for Next.js projects",
  "version": "1.0.5",
  "publisher": "alexsidorenko",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SidKH/next-dx"
  },
  "engines": {
    "vscode": "^1.96.2"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "next.js",
    "nextjs",
    "react",
    "dx"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Next.js DX",
      "properties": {
        "nextDX.features.routeSegmentLabels.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show route segment names in Next.js files (for page.tsx, layout.tsx, error.tsx)",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "vscode:publish": "pnpm vsce publish --no-dependencies",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.2",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
